<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<title>index</title>
	<script src="https://unpkg.com/vue"></script>
</head>
<body>
	<div id="app5">
		<p>{{message}}</p>
		<button v-on:click="reverseMessage">逆转消息</button>
	</div>

<script type="text/javascript">
	var app5 = new Vue({
		el:'#app5',
		data:{
			message:'Hello Vue!'
		},
		methods:{
			reverseMessage: function(){
				this.message = this.message.split('').reverse().join('');
			}
		}
	});
</script>
</body>
</html>
